{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["assets/*"]
    },
    "lib": ["esnext", "dom"]
  },
  "include": ["assets/**/*.ts", "assets/**/*.tsx", "assets/**/*.vue", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}